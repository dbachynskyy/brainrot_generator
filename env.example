# Environment Mode
# Set to "test" to save videos locally without uploading
# Set to "prod" to actually publish videos to platforms
BRAINROT_DEV=test

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
YOUTUBE_API_KEY=your_youtube_api_key_here
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here

# Video Generation APIs
RUNWAY_API_KEY=your_runway_api_key_here
PIKA_API_KEY=your_pika_api_key_here
KLING_API_KEY=your_kling_api_key_here
LUMA_API_KEY=your_luma_api_key_here

# Publishing APIs
YOUTUBE_CLIENT_ID=your_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret
TIKTOK_ACCESS_TOKEN=your_tiktok_access_token
META_ACCESS_TOKEN=your_meta_access_token

# Database
SUPABASE_URL=your_supabase_url
SUPABASE_KEY=your_supabase_key

# Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your_s3_bucket_name

# Redis (for Celery)
REDIS_URL=redis://localhost:6379/0

# Configuration
LOG_LEVEL=INFO
MAX_VIDEOS_TO_SCRAPE=50
MIN_GROWTH_RATE=0.20
FRAME_EXTRACTION_INTERVAL=0.5

